#!/bin/bash

working_dir=$(pwd)
parent_dir=$(dirname "$working_dir")

# Iterate over all HTML files in the current working directory
for file in "$working_dir"/*.html; do
    filename=$(basename "$file")
    parent_file="$parent_dir/$filename"

    # Check if the file does not exist in the parent directory
    if [[ ! -e "$parent_file" ]]; then
        cp "$file" "$parent_dir"
        echo "Copied: $filename"
    else
        # Check if the file in the working directory is newer than the one in the parent directory
        if [[ "$file" -nt "$parent_file" ]]; then
            cp "$file" "$parent_dir"
            echo "Updated: $filename"
        else
            echo "Skipped: $filename"
        fi
    fi
done
